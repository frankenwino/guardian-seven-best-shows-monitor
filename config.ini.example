[guardian]
# Guardian website URLs - modify these if The Guardian changes their URL structure
series_url = https://www.theguardian.com/tv-and-radio/series/the-seven-best-shows-to-stream-this-week
base_url = https://www.theguardian.com

[application]
# Whether to send Discord notifications when errors occur
send_error_notifications = true

[storage]
# Directory to store data files (relative to project root)
data_directory = data

[http]
# HTTP request timeout in seconds
request_timeout = 10

# User agent string for HTTP requests
user_agent = Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Number of retry attempts for failed HTTP requests
retry_attempts = 3

# Delay between retry attempts in seconds
retry_delay = 5

[logging]
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
log_level = INFO

# Whether to log to a file in addition to console
log_to_file = false

# Log file path (relative to project root if not absolute)
log_file = logs/guardian_monitor.log
